{% extends 'layout' %}

{% block scripts %}
<script src="/scripts/cvTable.js"></script>
{% endblock %}

{% block content %}

<h2>{{ name }}</h2>


<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Név</th>
      <th>Életkor</th>
      <th>Legmagasabb iskolai végzettség</th>
      <th>Bemutatkozás</th>
      <th>Kategória</th>
    </tr>
  </thead>
  <tbody>
      {% for cv in cvs %}
    <tr>
      <td>{{ cv.id }}</td>
      <td>{{ cv.name }}</td>
      <td>{{ cv.age }}</td>
      <td>{{ cv.education }}</td>
      <td>{{ cv.about }}</td>
      {% for category in categories %}
        {% if cv.category_id == category.id %}
          <td>{{ category.name }}</td>
        {% endif %}
      {% endfor %}
      <td><a href="/cvs/{{ cv.id }}">Megtekint</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table> 


{% endblock %}